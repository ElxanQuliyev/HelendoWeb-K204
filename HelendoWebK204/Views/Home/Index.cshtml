@using HelendoWebK204.Models;
@model HelendoWebK204.ViewModels.HomeVM
@{
    ViewBag.Title = "Home Page";
}

<div class="site-wrapper-reveal">
    <div class="hero-box-area mt-md-0 mt-lg-3">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 pl-0 pl-lg-3 pr-0 pr-lg-3">
                    <!-- Hero Slider Area Start -->
                    <div class="hero-area hero-slider-one">
                        @foreach (Slider slider in Model.Sliders)
                        {
                            <div class="single-hero-slider-one bg-img" data-bg="@slider.ImageUrl">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="hero-text-one">
                                                <h6 class="text-color-primary mb-10">
                                                    @slider.subHeader
                                                </h6>
                                                <h1 class="hero-title">
                                                    @slider.Header
                                                </h1>
                                                <p class="mt-30">
                                                    @slider.Description
                                                </p>
                                                <div class="button-box mt-30">
                                                    <a href="shop-4-column.html" class="hero-btn-one btn">Shop now <i class="icon-arrow-right"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                    <!-- Hero Slider Area End -->

                </div>
            </div>
        </div>
    </div>
    @{
        int num = 0;
    }
    @foreach (Product pro in Model.FeaturedProducts)
    {
        <div class="featuted-product-wrap section-space--pt_120">
            <div class="container">
                <div class="row align-items-center featuted-product-one">
                    <div class="col-lg-6 col-md-6 @(num % 2 == 0 ? "order-md-1 order-1" : "")">
                        <div class="product-thumbnail">
                            <a href="shop-left-sidebar.html"><img src="@pro.ImageUrl" class="img-fluid" alt="Featured Image"></a>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="featured-product-contect">
                            <h6 class="sub-heading mb-2">FEATURED PRODUCT</h6>
                            <h2 class="section-title--one"><a href="shop-left-sidebar.html">@pro.Name</a></h2>
                            <p class="mt-30">
                                @pro.Description
                            </p>
                            <div class="button-box section-space--mt_60">
                                <a href="javascript:void(0)" pro-id="@pro.ID" class="addToCart btn btn--md btn--border_1">Only $@pro.Price <i class="icon-arrow-right"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="images-text-bg text-right">
                <img src="assets/images/text-bg/bg-df-1-300x49.png" class="img-fluid" alt="">
            </div>
        </div>
        num++;

    }


    <div class="product-wrapper section-space--ptb_120">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title text-center mb-20">
                        <h2 class="section-title--one section-title--center">Best Selling</h2>
                    </div>
                </div>
            </div>

            <div class="product-main-content">
                <div class="row product-slider-active">
                    @foreach (Product pro in Model.Products)
                    {
                        <div class="col-lg-12">
                            <!-- Single Product Item Start -->
                            <div class="single-product-item text-center">
                                <div class="products-images">
                                    <a href="@Url.Action("Detail", "Products", new { id = pro.ID })" class="product-thumbnail">
                                        <img src="@pro.ImageUrl" class="img-fluid" alt="Product Images">

                                        <span class="ribbon out-of-stock ">
                                            Out Of Stock
                                        </span>
                                    </a>
                                    <div class="product-actions">
                                        <a class="pro-modal" href="#" data-toggle="modal" pro-id="@pro.ID" data-target="#prodect-modal"><i class="p-icon icon-plus"></i><span class="tool-tip">Quick View</span></a>
                                        <a class="addToCart" pro-id="@pro.ID" href="javascript:void(0)"><i class="p-icon icon-bag2"></i> <span class="tool-tip">Add to cart</span></a>
                                        <a href="wishlist.html"><i class="p-icon icon-heart"></i> <span class="tool-tip">Browse Wishlist</span></a>
                                    </div>
                                </div>
                                <div class="product-content">
                                    <h6 class="prodect-title"><a href="@Url.Action("Detail", "Products", new { id = pro.ID })">@pro.Name</a></h6>
                                    <div class="prodect-price">
                                        @if (pro.Discount != null && pro.Discount > 0)
                                        {
                                            <span class='new-price'>@(pro.Price-pro.Discount) Azn -</span>
                                            <span class="old-price"><del>@pro.Price Azn</del> </span>
                                        }
                                        else
                                        {
                                            <span class="old-price">@pro.Price Azn </span>
                                        }
                                    </div>
                                </div>
                            </div><!-- Single Product Item End -->
                        </div>


                    }

                </div>
            </div>
        </div>
    </div>


    <div class="offer-colection-area container-fluid">
        <div class="section-space--ptb_120 bg-img" data-bg="assets/images/bg/h1-countdown.jpg">
            <div class="row">
                <div class="container">
                    <div class="row pl-md-0 pl-3 pr-md-0 pr-3">
                        <div class="col-lg-7 col-md-7">
                            <div class="colection-info-wrap">
                                <div class="section-title mb-30">
                                    <h2 class="section-title--one ">Deco Collection <span class="text-red">50% OFF</span></h2>
                                </div>

                                <p>The standard chunk of Lorem Ipsum used since the 1500s is reproduced for those. Sections 1.10.32 and 1.10.33 from “de Finibus Bonorum et Malorum</p>

                                <div class="timer text-center section-space--mt_60">
                                    <!-- countdown start -->
                                    <div class="countdown-deals counter-style--one" data-countdown="2020/12/01"></div>
                                    <!-- countdown end -->
                                </div>

                                <div class="button-box section-space--mt_60">
                                    <a href="shop-4-column.html" class="btn--md btn--black btn">Shop now <i class="icon-arrow-right"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="our-blog-area section-space--ptb_90">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title text-center mb-20">
                        <h2 class="section-title--one section-title--center">Our Blog</h2>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-4 col-md-6 col-sm-6 col-12">
                    <!-- Single Blog Item Start -->
                    <div class="single-blog-item mt-30">
                        <div class="blog-thumbnail-box">
                            <a href="single-blog-post.html" class="thumbnail">
                                <img src="assets/images/blog/8-570x370.jpg" class="img-fluid" alt="Blog Images">
                            </a>
                            <a href="#" class="btn-blog"> Read more </a>
                        </div>
                        <div class="blog-contents">
                            <h6 class="blog-title"><a href="single-blog-post.html">Interior design is the art, the interior designer is the artist.</a></h6>
                            <div class="meta-tag-box">
                                <div class="meta date"><span>October 15, 2020</span></div>
                                <div class="meta author"><span><a href="#">Hastheme</a></span></div>
                                <div class="meta cat"><span>in <a href="#">Chair</a></span></div>
                            </div>
                        </div>
                    </div><!-- Single Blog Item End -->
                </div>
                <div class="col-lg-4 col-md-6  col-sm-6 col-12">
                    <!-- Single Blog Item Start -->
                    <div class="single-blog-item mt-30">
                        <div class="blog-thumbnail-box">
                            <a href="single-blog-post.html" class="thumbnail">
                                <img src="assets/images/blog/9-570x370.jpg" class="img-fluid" alt="Blog Images">
                            </a>
                            <a href="single-blog-post.html" class="btn-blog"> Read more </a>
                        </div>
                        <div class="blog-contents">
                            <h6 class="blog-title"><a href="single-blog-post.html">Decorate your home with the most modern furnishings.</a></h6>
                            <div class="meta-tag-box">
                                <div class="meta date"><span>October 02, 2020</span></div>
                                <div class="meta author"><span><a href="#">Hastheme</a></span></div>
                                <div class="meta cat"><span>in <a href="#">Chair</a></span></div>
                            </div>
                        </div>
                    </div><!-- Single Blog Item End -->
                </div>
                <div class="col-lg-4 col-md-6 col-sm-6 col-12">
                    <!-- Single Blog Item Start -->
                    <div class="single-blog-item mt-30">
                        <div class="blog-thumbnail-box">
                            <a href="single-blog-post.html" class="thumbnail">
                                <img src="assets/images/blog/10-570x370.jpg" class="img-fluid" alt="Blog Images">
                            </a>
                            <a href="single-blog-post.html" class="btn-blog"> Read more </a>
                        </div>
                        <div class="blog-contents">
                            <h6 class="blog-title"><a href="single-blog-post.html">Spatialize with the decorations of the Helendo store.</a></h6>
                            <div class="meta-tag-box">
                                <div class="meta date"><span>October 18, 2020</span></div>
                                <div class="meta author"><span><a href="#">Hastheme</a></span></div>
                                <div class="meta cat"><span>in <a href="#">Chair</a></span></div>
                            </div>
                        </div>
                    </div><!-- Single Blog Item End -->
                </div>
            </div>

        </div>
    </div>

    <div class="our-newsletter-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-5 col-md-4">
                    <div class="section-title small-mb__40 tablet-mb__40">
                        <h2 class="section-title--one">Our Newsletter</h2>
                    </div>
                </div>
                <div class="col-lg-7 col-md-8">
                    <div class="newsletter-wrap">
                        <form action="#" class="newsletter--one">
                            <input class="input-box" type="text" placeholder="Your email address">
                            <button class="submit-btn">Subscribe</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

    @section scripts{
        <script src="~/Scripts/proDetailMain.js"></script>
    }
  